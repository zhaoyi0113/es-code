{
  "appId": "io.homesoft",
  "compression": "normal",
  "npmRebuild": true,
  "files": ["assets","lib"],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "icons/es-icon.png"
  },
  "dmg": {
		"icon": "icons/es-icon.ico",
		"iconSize": 120,
    "contents": [{
        "x": 162,
        "y": 302
      },
      {
        "x": 540,
        "y": 302,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
		"icon": "icons/es-icon.ico",
    "category": "Development",
    "target": "AppImage"
  },
  "win": {
		"icon": "icons/es-icon.ico",
    "target": "nsis"
  },
  "nsis": {
    "deleteAppDataOnUninstall": true,
    "perMachine": true,
    "artifactName": "${productName}-${version}.${ext}"
  }
}
